{
  "entrypoint": "index.html",
  "shell": "src/console-app.html",
  "sources": [
    "src/**/*"
  ],

  "extraDependencies": [
    "lib/IPSProxy/dist/IPSProxyFactory.js",
    "lib/monaco/**/*",
    "legacy/**/*",
    "fonts/**/*",
